{
	"name": "@d1g1tal/date-time-js",
	"version": "2.1.0",
	"author": {
		"name": "Jason DiMeo"
	},
	"license": "MIT",
	"description": "JavaScript DateTime Library",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/D1g1talEntr0py/date-time-js.git"
	},
	"bugs": {
		"url": "https://github.com/D1g1talEntr0py/date-time-js/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"types": "src/index/esm.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/date-time.js",
			"default": "./dist/umd/date-time.js"
		}
	},
	"scripts": {
		"build": "npm run update-browserslist && webpack --mode=production",
		"build:esm": "npm run build --config-name=esm",
		"build:umd": "npm run build --config-name=umd",
		"lint": "eslint --ext .js --fix --ignore-path .gitignore .",
		"test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
		"d.ts": "tsc --allowJs -declaration --emitDeclarationOnly --declarationMap --skipLibCheck --lib esnext src/index/esm.js",
		"update-browserslist": "npx browserslist@latest --update-db"
	},
	"files": [
		"/src",
		"/dist"
	],
	"keywords": [
		"date-time-js",
		"date",
		"time",
		"immutable"
	],
	"devDependencies": {
		"@babel/cli": "^7.21.0",
		"@babel/core": "^7.21.3",
		"@babel/eslint-parser": "^7.21.3",
		"@babel/preset-env": "^7.20.2",
		"@skypack/package-check": "^0.2.2",
		"babel-loader": "^9.1.2",
		"browserslist": "^4.21.5",
		"copy-webpack-plugin": "^11.0.0",
		"core-js": "^3.29.1",
		"eslint": "^8.36.0",
		"eslint-plugin-compat": "^4.1.2",
		"eslint-plugin-jsdoc": "^40.1.0",
		"jest": "^29.5.0",
		"terser-webpack-plugin": "^5.3.7",
		"webpack": "^5.76.3",
		"webpack-cli": "^5.0.1"
	},
	"browserslist": [
		"defaults",
		"not ios_saf < 15",
		"not op_mini all"
	],
	"jest": {
		"verbose": true,
		"fakeTimers": {
			"enableGlobally": true
		},
		"transform": {},
		"coverageDirectory": "./tests/coverage/",
		"coveragePathIgnorePatterns": [
			"<rootDir>/src/index/esm.js",
			"<rootDir>/src/index/umd.js",
			".d.ts",
			"/node_modules/"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*"
		]
	},
	"dependencies": {
		"@d1g1tal/chrysalis": "^1.2.2",
		"dayjs": "^1.11.7"
	}
}

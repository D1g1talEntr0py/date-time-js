{
	"name": "date-time-js",
	"version": "1.1",
	"author": {
		"name": "Jason DiMeo"
	},
	"description": "JavaScript DateTime Library",
	"scripts": {
		"build": "npm run update-browserslist && webpack --mode=production",
		"build-native": "webpack --mode=production --env esVersion=2021",
		"start": "webpack --mode=development --env esVersion=2021",
		"test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
		"update-browserslist": "npx browserslist@latest --update-db"
	},
	"type": "module",
	"module": "src/js/index.js",
	"devDependencies": {
		"@babel/cli": "7.16.0",
		"@babel/core": "7.16.5",
		"@babel/eslint-parser": "7.16.5",
		"@babel/preset-env": "7.16.5",
		"@babel/register": "7.16.5",
		"babel-loader": "8.2.3",
		"browserslist": "4.19.1",
		"core-js": "3.20.1",
		"jest": "27.4.5",
		"mockdate": "3.0.5",
		"terser-webpack-plugin": "5.3.0",
		"webpack": "5.65.0",
		"webpack-cli": "4.9.1"
	},
	"browserslist": [
		"defaults",
		"maintained node versions"
	],
	"jest": {
		"verbose": true,
		"transform": {}
	}
}

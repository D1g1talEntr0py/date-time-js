{
	"name": "@d1g1tal/date-time-js",
	"version": "2.0",
	"author": {
		"name": "Jason DiMeo"
	},
	"license": "MIT",
	"description": "JavaScript DateTime Library",
	"scripts": {
		"build": "npm run update-browserslist && webpack --mode=production",
		"build:esm": "npm run build --config-name=esm",
		"build:umd": "npm run build --config-name=umd",
		"lint": "eslint --ext .js --fix --ignore-path .gitignore .",
		"test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
		"update-browserslist": "npx browserslist@latest --update-db"
	},
	"type": "module",
	"main": "/src/js/index/umd.js",
	"module": "/src/js/index/esm.js",
	"files": [
		"/src",
		"/dist"
	],
	"keywords": [
		"date-time-js",
		"date",
		"time",
		"immutable"
	],
	"devDependencies": {
		"@babel/cli": "^7.19.3",
		"@babel/core": "^7.19.3",
		"@babel/eslint-parser": "^7.19.1",
		"@babel/preset-env": "^7.19.4",
		"babel-loader": "^8.2.5",
		"browserslist": "^4.21.4",
		"copy-webpack-plugin": "^11.0.0",
		"eslint": "^8.25.0",
		"eslint-plugin-compat": "^4.0.2",
		"eslint-plugin-jsdoc": "^39.3.6",
		"jest": "^29.1.2",
		"terser-webpack-plugin": "^5.3.6",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0"
	},
	"browserslist": [
		">= 0.5%",
		"last 2 major versions",
		"Firefox ESR",
		"not dead",
		"not ios_saf < 15"
	],
	"jest": {
		"verbose": true,
		"fakeTimers": {
			"enableGlobally": true
		},
		"transform": {},
		"coverageDirectory": "./tests/coverage/",
		"coveragePathIgnorePatterns": [
			"<rootDir>/src/js/index/esm.js",
			"<rootDir>/src/js/index/umd.js",
			"/node_modules/"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*"
		]
	},
	"dependencies": {
		"@d1g1tal/chrysalis": "^1.1.2",
		"dayjs": "1.11.5"
	}
}
